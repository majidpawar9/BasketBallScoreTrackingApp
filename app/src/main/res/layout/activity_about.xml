<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout defines the About screen UI for an Android application. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:visibility="visible">

    <!-- Toolbar for the About screen. -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:layout_marginTop="36dp"
        android:background="@color/orange"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize" />

    <!-- Text view displaying app creator information. -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This App is made by Majid Pawar"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>